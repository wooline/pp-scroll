  },
  "homepage": "https://github.com/wooline/pp-scroll#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/react": "~17.0.0",
    "@types/react-dom": "~17.0.0",
    "less": "^4.1.1",
    "typescript": "~4.1.0",
    "react": "~17.0.2",
    "@medux/dev-pkg": "^2.1.4"
  },
  "peerDependencies": {
    "@babel/runtime": "~7.12.5",
    "react": "^16.0.0 || ^17"
